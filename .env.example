# ── Kite Agent Passport ──────────────────────────────────
# MCP server URL (default: Kite testnet)
KITE_MCP_URL=https://neo.dev.gokite.ai/v1/mcp

# Your Agent ID from the Kite Portal
KITE_AGENT_ID=

# ── OpenRouter (for autonomous AI reasoning) ────────────
# Get a free API key at https://openrouter.ai
OPENROUTER_API_KEY=

# Model to use — free options:
#   mistralai/mistral-7b-instruct:free
#   meta-llama/llama-3.1-8b-instruct:free
#   google/gemma-3-4b-it:free
# Paid (better reasoning):
#   openai/gpt-4o-mini
#   anthropic/claude-3-haiku
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# ── Agent Behavior ──────────────────────────────────────
# Maximum payment amount the agent will auto-approve (in token units)
MAX_AUTO_APPROVE_AMOUNT=5

# Whether to require manual confirmation for payments
REQUIRE_PAYMENT_CONFIRMATION=true

# Log level: debug | info | warn | error
LOG_LEVEL=info

# ── AMM Pool ─────────────────────────────────────────────
POOL_SERVER_PORT=8402
POOL_SERVICE_WALLET=0x4A50DCA63d541372ad36E5A36F1D542d51164F19
POOL_ADMIN_SECRET=kite-pool-admin
# false = demo mode, true = verify via Kite facilitator
POOL_VERIFY_PAYMENT=false
